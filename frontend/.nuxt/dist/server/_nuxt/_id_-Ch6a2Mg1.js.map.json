AA,OAAA,EAAQ,iBAAiBA,MAAA,OAAA,EAAQ,gBAAgBA,MAAA,OAAA,EAAQ,OAAK;AAEhE,gBAAA,4JAAAD,gBAAAC,MAAA,OAAA,EAAQ,gBAAgBA,eAAQ,OAAO,eAAc,CAAA,CAAA,QAAA;AAAA;;;;AAK/C,YAAA,CAAAA,MAAA,OAAA,EAAQ,SAAO;;QAIX,WAAAA,MAAA,OAAA,EAAQ,cAAU,GAAA;AAEoB,gBAAA,oOAAAD,eAAAC,MAAA,OAAA,EAAQ,UAAU,CAAA,YAAA;AAAA;;;;sBAiBpDA,MAAA,OAAA,EAAQ,UAAQ,CAA3B,YAAO;yPAGW,OAAO,CAAA,eAAA;AAAA;kaAahCD,eAAAC,MAAA,OAAA,EAAQ,KAAK;;UAGuGA,MAAA,UAAA;yDAM5GA,MAAA,UAAA,IAAU,qBAAA,eAAA,SAAA,CAAA,wGAKyBD,eAAAC,MAAA,OAAA,EAAQ,IAAI;AAMzCC,sBAAA,IAAL,MAAC;6CACA,KAAKD,MAAA,OAAA,EAAQ,SAAM,oBAAA,iBAAA,yBAAA,CAAA,CAAA,wBAAA;AAAA;8FAGkBD,eAAAC,MAAA,OAAA,EAAQ,MAAM,8DAElCD,eAAAC,MAAA,OAAA,EAAQ,WAAW,kMAMGA,MAAA,OAAA,EAAQ,QAAK,KAAQ,eAAc,CAAA;YAC3EA,MAAA,OAAA,EAAQ,iBAAiBA,MAAA,OAAA,EAAQ,gBAAgBA,MAAA,OAAA,EAAQ,OAAK;sGAEnEA,MAAA,OAAA,EAAQ,gBAAa,KAAQ,eAAc,CAAA,CAAA,SAAA;AAAA;;;gEAGxBD,eAAAC,MAAA,OAAA,EAAQ,WAAW,kiBAYkCA,MAAA,QAAA,CAAQ,yOAMrDD,eAAAC,MAAA,OAAA,EAAQ,UAAU,uEAOlCE,sBAAA,CAAAF,MAAA,OAAA,EAAQ,OAAO,IAAA,cAAA,6ZAG9BD,eAAAC,MAAA,OAAA,EAAQ,UAAO,UAAA,MAAA,oBAIAE,sBAAA,CAAAF,MAAA,OAAA,EAAQ,OAAO,IAAA,cAAA;AAmCXC,sBAAAD,MAAA,OAAA,EAAQ,OAAK,CAA5B,OAAO,QAAG;kMAEsBD,eAAA,iBAAiB,GAAG,CAAA,iFACrB,KAAK;;AAeO,cAAA,mdAAAA,eAAAC,MAAA,OAAA,EAAQ,MAAM,CAAA,sEAAA;AAEnDC,sBAAA,IAAL,MAAC;6CACA,KAAKD,MAAA,OAAA,EAAQ,SAAM,oBAAA,iBAAA,yBAAA,CAAA,CAAA,wBAAA;AAAA;AAGC,cAAA,+DAAAD,eAAAC,MAAA,OAAA,EAAQ,WAAW,CAAA,iEAAA;sBAIrBA,MAAA,kBAAA,GAAkB,CAApC,OAAO,WAAM;kJAEsB,MAAM,mMAGzBG,eAAA,EAAA,OAAA,GAAA,KAAK,IAAK,QAAQH,MAAA,OAAA,EAAQ,cAAW,KAAA,GAAA,CAAA,IAAA,CAAA,wHAEN,KAAK;;;AAO7CC,sBAAAD,MAAA,OAAA,IAAV,WAAM;wdAQ+BD,eAAA,OAAO,MAAM,4EAChB,WAAW,OAAO,IAAI,CAAA;AAI/CE,wBAAA,IAAL,MAAC;+CACA,KAAK,OAAO,SAAM,oBAAA,iBAAA,iBAAA,CAAA,CAAA,wBAAA;AAAA;AAIW,gBAAA,gFAAAF,eAAA,OAAO,OAAO,CAAA,YAAA;AAAA;;;;;UAkBvDC,MAAA,kBAAA,GAAkB;AAMQ,cAAA,mfAAAD,gBAAAC,WAAA,OAAA,MAAAA,mBAAS,IAAI,CAAA,6aAAA;AAAA;;;;;;;;;;;;;;","names":["_ssrRenderAttrs","_mergeProps","_push","_parent","_ssrInterpolate","_unref","_ssrRenderList","_ssrIncludeBooleanAttr","_ssrRenderStyle"],"sources":["../../../../pages/products/[id].vue"],"sourcesContent":["<template>\r\n  <div class=\"min-h-screen bg-gradient-to-br from-gray-900 via-slate-900 to-black relative overflow-hidden\">\r\n    <!-- 背景装饰效果 -->\r\n    <div class=\"fixed inset-0 pointer-events-none\">\r\n      <div class=\"absolute top-20 left-20 w-96 h-96 bg-gradient-to-r from-cyan-500/20 to-blue-500/20 rounded-full filter blur-3xl animate-pulse\"></div>\r\n      <div class=\"absolute bottom-20 right-20 w-80 h-80 bg-gradient-to-r from-purple-500/20 to-pink-500/20 rounded-full filter blur-3xl animate-pulse delay-1000\"></div>\r\n      <div class=\"absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-to-r from-indigo-500/10 to-cyan-500/10 rounded-full filter blur-3xl animate-spin-slow\"></div>\r\n    </div>\r\n\r\n    <!-- 导航栏 -->\r\n    <nav class=\"relative z-10\">\r\n      <div class=\"container mx-auto px-6 py-6\">\r\n        <div class=\"glass-card-dark rounded-2xl p-6 border border-cyan-500/30 shadow-2xl shadow-cyan-500/20\">\r\n          <div class=\"flex items-center justify-between\">\r\n            <div class=\"flex items-center space-x-6\">\r\n              <!-- Logo -->\r\n              <AppLogo size=\"medium\" :show-decorations=\"false\" />\r\n              <div class=\"h-6 w-px bg-gray-600\"></div>\r\n              <button @click=\"$router.go(-1)\" \r\n                      class=\"inline-flex items-center text-cyan-400 hover:text-cyan-300 transition-colors duration-200\">\r\n                <i class=\"bi bi-arrow-left mr-2 text-lg\"></i>\r\n                <span class=\"text-sm font-medium\">返回</span>\r\n              </button>\r\n            </div>\r\n            <nav class=\"text-sm text-gray-400\">\r\n              <NuxtLink to=\"/\" class=\"hover:text-cyan-400\">首页</NuxtLink>\r\n              <i class=\"bi bi-chevron-right mx-2 text-cyan-400\"></i>\r\n              <NuxtLink to=\"/products\" class=\"hover:text-cyan-400\">产品中心</NuxtLink>\r\n              <i class=\"bi bi-chevron-right mx-2 text-cyan-400\"></i>\r\n              <span class=\"text-white font-medium\">{{ product?.name || '产品详情' }}</span>\r\n            </nav>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </nav>\r\n\r\n    <!-- 主要内容 -->\r\n    <div class=\"container mx-auto px-6 py-8 relative z-10\" v-if=\"product\">\r\n      <div class=\"grid lg:grid-cols-2 gap-12 mb-12\">\r\n        <!-- 左侧：产品图片和特性 -->\r\n        <div class=\"space-y-6\">\r\n          <!-- 主图片 -->\r\n          <div class=\"glass-card-dark rounded-2xl border border-cyan-500/30 shadow-2xl shadow-cyan-500/20 overflow-hidden\">\r\n            <div class=\"relative h-96 bg-gradient-to-br from-gray-800/50 to-gray-900/50\">\r\n              <!-- 产品图片或placeholder -->\r\n              <div v-if=\"product.image\" class=\"product-image-container\">\r\n                <img :src=\"product.image\" :alt=\"product.name\" \r\n                     class=\"w-full h-full object-contain p-8 transition-transform duration-300 hover:scale-105\"\r\n                     @error=\"$event.target.style.display = 'none'\">\r\n              </div>\r\n              <div v-else class=\"product-placeholder\">\r\n                <i class=\"bi bi-motherboard\"></i>\r\n                <span class=\"product-placeholder-text\">{{ product.name }}</span>\r\n              </div>\r\n              \r\n              <!-- 折扣标签 -->\r\n              <div v-if=\"product.originalPrice && product.originalPrice > product.price\" \r\n                   class=\"absolute top-4 left-4 bg-gradient-to-r from-red-500 to-pink-500 text-white px-3 py-1 rounded-full text-sm font-semibold\">\r\n                省 ¥{{ (product.originalPrice - product.price).toLocaleString() }}\r\n              </div>\r\n\r\n              <!-- 库存状态 -->\r\n              <div class=\"absolute top-4 right-4\">\r\n                <span v-if=\"!product.inStock\" \r\n                      class=\"inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-500/20 text-red-300 border border-red-500/30\">\r\n                  <i class=\"bi bi-x-circle mr-1\"></i>缺货\r\n                </span>\r\n                <span v-else-if=\"product.stockCount <= 5\" \r\n                      class=\"inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-orange-500/20 text-orange-300 border border-orange-500/30\">\r\n                  <i class=\"bi bi-exclamation-triangle mr-1\"></i>仅剩 {{ product.stockCount }} 件\r\n                </span>\r\n                <span v-else \r\n                      class=\"inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-500/20 text-green-300 border border-green-500/30\">\r\n                  <i class=\"bi bi-check-circle mr-1\"></i>现货\r\n                </span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n\r\n          <!-- 产品特性 -->\r\n          <div class=\"glass-card-dark rounded-2xl border border-cyan-500/30 shadow-2xl shadow-cyan-500/20 p-6\">\r\n            <h3 class=\"text-xl font-semibold text-white mb-4 flex items-center gap-2\">\r\n              <i class=\"bi bi-star text-cyan-400\"></i>\r\n              核心特性\r\n            </h3>\r\n            <div class=\"grid grid-cols-1 gap-3\">\r\n              <div v-for=\"feature in product.features\" :key=\"feature\"\r\n                   class=\"flex items-center gap-3 p-3 bg-gray-800/30 rounded-lg border border-gray-700/30\">\r\n                <i class=\"bi bi-check-circle text-green-400\"></i>\r\n                <span class=\"text-white\">{{ feature }}</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 右侧：产品信息和购买 -->\r\n        <div class=\"space-y-6\">\r\n          <!-- 基本信息 -->\r\n          <div class=\"glass-card-dark rounded-2xl border border-cyan-500/30 shadow-2xl shadow-cyan-500/20 p-8\">\r\n            <!-- 品牌和收藏 -->\r\n            <div class=\"flex items-center justify-between mb-4\">\r\n              <span class=\"inline-flex items-center px-4 py-2 rounded-lg text-sm font-medium bg-cyan-500/20 text-cyan-300 border border-cyan-500/30\">\r\n                {{ product.brand }}\r\n              </span>\r\n              <button @click=\"toggleFavorite\" \r\n                      :class=\"[\r\n                        'p-3 rounded-lg border transition-all duration-300',\r\n                        isFavorite \r\n                          ? 'bg-red-500/20 border-red-500/30 text-red-300' \r\n                          : 'border-gray-600/50 text-gray-400 hover:border-red-500/50 hover:text-red-300'\r\n                      ]\">\r\n                <i :class=\"isFavorite ? 'bi bi-heart-fill' : 'bi bi-heart'\" class=\"text-xl\"></i>\r\n              </button>\r\n            </div>\r\n\r\n            <!-- 产品名称 -->\r\n            <h1 class=\"text-3xl font-bold text-white mb-4\">{{ product.name }}</h1>\r\n\r\n            <!-- 评分 -->\r\n            <div class=\"flex items-center gap-4 mb-6\">\r\n              <div class=\"flex items-center gap-2\">\r\n                <div class=\"flex\">\r\n                  <i v-for=\"i in 5\" :key=\"i\" \r\n                     :class=\"i <= product.rating ? 'text-yellow-400' : 'text-gray-600'\"\r\n                     class=\"bi bi-star-fill text-lg\"></i>\r\n                </div>\r\n                <span class=\"text-lg font-semibold text-white\">{{ product.rating }}</span>\r\n              </div>\r\n              <span class=\"text-gray-400\">({{ product.reviewCount }} 条评价)</span>\r\n            </div>\r\n\r\n            <!-- 价格 -->\r\n            <div class=\"mb-8\">\r\n              <div class=\"flex items-center gap-4 mb-2\">\r\n                <span class=\"text-4xl font-bold text-cyan-400\">¥{{ (product.price * 7.2).toLocaleString() }}</span>\r\n                <span v-if=\"product.originalPrice && product.originalPrice > product.price\" \r\n                      class=\"text-xl text-gray-500 line-through\">\r\n                  ¥{{ (product.originalPrice * 7.2).toLocaleString() }}\r\n                </span>\r\n              </div>\r\n              <p class=\"text-gray-300\">{{ product.description }}</p>\r\n            </div>\r\n\r\n            <!-- 数量选择 -->\r\n            <div class=\"mb-6\">\r\n              <label class=\"block text-sm font-semibold text-white mb-3\">购买数量</label>\r\n              <div class=\"flex items-center gap-4\">\r\n                <div class=\"flex items-center border border-gray-600/50 rounded-lg\">\r\n                  <button @click=\"decreaseQuantity\" \r\n                          class=\"px-4 py-3 text-white hover:bg-gray-700/50 rounded-l-lg transition-colors duration-200\">\r\n                    <i class=\"bi bi-dash\"></i>\r\n                  </button>\r\n                  <span class=\"px-6 py-3 text-white font-semibold min-w-[60px] text-center\">{{ quantity }}</span>\r\n                  <button @click=\"increaseQuantity\" \r\n                          class=\"px-4 py-3 text-white hover:bg-gray-700/50 rounded-r-lg transition-colors duration-200\">\r\n                    <i class=\"bi bi-plus\"></i>\r\n                  </button>\r\n                </div>\r\n                <span class=\"text-gray-400\">库存：{{ product.stockCount }} 件</span>\r\n              </div>\r\n            </div>\r\n\r\n            <!-- 购买按钮 -->\r\n            <div class=\"space-y-4\">\r\n              <button @click=\"addToCart\" \r\n                      :disabled=\"!product.inStock\"\r\n                      class=\"w-full bg-gradient-to-r from-cyan-600 to-blue-600 hover:from-cyan-500 hover:to-blue-500 disabled:from-gray-600 disabled:to-gray-600 text-white py-4 px-6 rounded-xl font-semibold text-lg transition-all duration-300 flex items-center justify-center gap-3 shadow-lg shadow-cyan-500/20 hover:shadow-cyan-500/40 disabled:cursor-not-allowed\">\r\n                <i class=\"bi bi-cart-plus\"></i>\r\n                {{ product.inStock ? '加入购物车' : '暂时缺货' }}\r\n              </button>\r\n\r\n              <button @click=\"buyNow\" \r\n                      :disabled=\"!product.inStock\"\r\n                      class=\"w-full bg-gradient-to-r from-green-600 to-emerald-600 hover:from-green-500 hover:to-emerald-500 disabled:from-gray-600 disabled:to-gray-600 text-white py-4 px-6 rounded-xl font-semibold text-lg transition-all duration-300 flex items-center justify-center gap-3 shadow-lg shadow-green-500/20 hover:shadow-green-500/40 disabled:cursor-not-allowed\">\r\n                <i class=\"bi bi-lightning\"></i>\r\n                立即购买\r\n              </button>\r\n            </div>\r\n\r\n            <!-- 保障信息 -->\r\n            <div class=\"mt-8 pt-6 border-t border-gray-700/50\">\r\n              <div class=\"grid grid-cols-3 gap-4 text-center\">\r\n                <div class=\"flex flex-col items-center gap-2\">\r\n                  <i class=\"bi bi-truck text-2xl text-green-400\"></i>\r\n                  <span class=\"text-sm text-gray-300\">免费配送</span>\r\n                </div>\r\n                <div class=\"flex flex-col items-center gap-2\">\r\n                  <i class=\"bi bi-shield-check text-2xl text-blue-400\"></i>\r\n                  <span class=\"text-sm text-gray-300\">两年保修</span>\r\n                </div>\r\n                <div class=\"flex flex-col items-center gap-2\">\r\n                  <i class=\"bi bi-arrow-repeat text-2xl text-purple-400\"></i>\r\n                  <span class=\"text-sm text-gray-300\">30天退换</span>\r\n                </div>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 详细规格 -->\r\n      <div class=\"glass-card-dark rounded-2xl border border-cyan-500/30 shadow-2xl shadow-cyan-500/20 p-8 mb-12\">\r\n        <h2 class=\"text-2xl font-bold text-white mb-6 flex items-center gap-3\">\r\n          <i class=\"bi bi-gear text-cyan-400\"></i>\r\n          技术规格\r\n        </h2>\r\n        <div class=\"grid md:grid-cols-2 gap-6\">\r\n          <div v-for=\"(value, key) in product.specs\" :key=\"key\" \r\n               class=\"flex justify-between items-center p-4 bg-gray-800/30 rounded-lg border border-gray-700/30\">\r\n            <span class=\"text-gray-300 font-medium\">{{ translateSpecKey(key) }}</span>\r\n            <span class=\"font-semibold text-white\">{{ value }}</span>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- 用户评价 -->\r\n      <div class=\"glass-card-dark rounded-2xl border border-cyan-500/30 shadow-2xl shadow-cyan-500/20 p-8\">\r\n        <h2 class=\"text-2xl font-bold text-white mb-6 flex items-center gap-3\">\r\n          <i class=\"bi bi-chat-dots text-cyan-400\"></i>\r\n          用户评价\r\n        </h2>\r\n        \r\n        <!-- 评价统计 -->\r\n        <div class=\"grid md:grid-cols-2 gap-8 mb-8\">\r\n          <div class=\"text-center\">\r\n            <div class=\"text-5xl font-bold text-cyan-400 mb-2\">{{ product.rating }}</div>\r\n            <div class=\"flex justify-center mb-2\">\r\n              <i v-for=\"i in 5\" :key=\"i\" \r\n                 :class=\"i <= product.rating ? 'text-yellow-400' : 'text-gray-600'\"\r\n                 class=\"bi bi-star-fill text-xl\"></i>\r\n            </div>\r\n            <div class=\"text-gray-300\">基于 {{ product.reviewCount }} 条评价</div>\r\n          </div>\r\n          \r\n          <div class=\"space-y-3\">\r\n            <div v-for=\"(count, rating) in ratingDistribution\" :key=\"rating\" \r\n                 class=\"flex items-center gap-4\">\r\n              <span class=\"text-white w-8 flex-shrink-0\">{{ rating }}星</span>\r\n              <div class=\"flex-1 bg-gray-700/50 rounded-full h-2 overflow-hidden max-w-full\">\r\n                <div class=\"bg-cyan-400 h-2 rounded-full transition-all duration-300 max-w-full\" \r\n                     :style=\"{ width: `${Math.min((count / product.reviewCount) * 100, 100)}%` }\"></div>\r\n              </div>\r\n              <span class=\"text-gray-400 w-12 text-sm flex-shrink-0\">{{ count }}</span>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- 评价列表 -->\r\n        <div class=\"space-y-6\">\r\n          <div v-for=\"review in reviews\" :key=\"review.id\" \r\n               class=\"p-6 bg-gray-800/30 rounded-lg border border-gray-700/30\">\r\n            <div class=\"flex items-center justify-between mb-4\">\r\n              <div class=\"flex items-center gap-4\">\r\n                <div class=\"w-12 h-12 bg-cyan-500/20 rounded-full flex items-center justify-center\">\r\n                  <i class=\"bi bi-person text-cyan-400 text-xl\"></i>\r\n                </div>\r\n                <div>\r\n                  <div class=\"font-semibold text-white\">{{ review.author }}</div>\r\n                  <div class=\"text-sm text-gray-400\">{{ formatDate(review.date) }}</div>\r\n                </div>\r\n              </div>\r\n              <div class=\"flex\">\r\n                <i v-for=\"i in 5\" :key=\"i\" \r\n                   :class=\"i <= review.rating ? 'text-yellow-400' : 'text-gray-600'\"\r\n                   class=\"bi bi-star-fill\"></i>\r\n              </div>\r\n            </div>\r\n            <p class=\"text-gray-300 leading-relaxed\">{{ review.comment }}</p>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 加载状态 -->\r\n    <div v-else class=\"container mx-auto px-6 py-20 relative z-10\">\r\n      <div class=\"text-center\">\r\n        <div class=\"inline-flex flex-col items-center glass-card-dark rounded-2xl border border-cyan-500/30 p-12 shadow-2xl shadow-cyan-500/20\">\r\n          <div class=\"w-16 h-16 border-4 border-cyan-500 border-t-transparent rounded-full animate-spin mb-6\"></div>\r\n          <p class=\"text-2xl font-medium text-white\">正在加载产品详情...</p>\r\n          <p class=\"text-gray-400 mt-2\">请稍候</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- 购买成功提示 -->\r\n    <div v-if=\"showSuccessMessage\" class=\"fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 p-4\">\r\n      <div class=\"glass-card-dark rounded-2xl border border-green-500/30 shadow-2xl shadow-green-500/20 p-8 max-w-md w-full text-center\">\r\n        <div class=\"text-6xl text-green-400 mb-6\">\r\n          <i class=\"bi bi-check-circle\"></i>\r\n        </div>\r\n        <h3 class=\"text-2xl font-bold text-white mb-4\">已加入购物车！</h3>\r\n        <p class=\"text-gray-300 mb-8\">{{ product?.name }} 已成功添加到购物车。</p>\r\n        <div class=\"space-y-3\">\r\n          <button @click=\"goToCheckout\" \r\n                  class=\"w-full bg-green-600 hover:bg-green-500 text-white py-3 px-6 rounded-lg font-medium transition-colors duration-300\">\r\n            去结算\r\n          </button>\r\n          <button @click=\"showSuccessMessage = false\" \r\n                  class=\"w-full border border-gray-600 hover:border-green-500 text-gray-300 hover:text-white py-3 px-6 rounded-lg font-medium transition-colors duration-300\">\r\n            继续购物\r\n          </button>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\n// 导入路由参数\r\nconst route = useRoute()\r\nconst productId = parseInt(route.params.id)\r\n\r\n// 响应式数据\r\nconst product = ref(null)\r\nconst quantity = ref(1)\r\nconst isFavorite = ref(false)\r\nconst showSuccessMessage = ref(false)\r\n\r\n// 模拟产品数据\r\nconst productDatabase = {\r\n  1: {\r\n    id: 1,\r\n    name: 'NVIDIA GeForce RTX 4090',\r\n    brand: 'NVIDIA',\r\n    price: 1599,\r\n    originalPrice: 1699,\r\n    rating: 4.8,\r\n    reviewCount: 1256,\r\n    image: '',\r\n    inStock: true,\r\n    stockCount: 5,\r\n    description: '旗舰级显卡，专为4K游戏和内容创作而设计。为最苛刻的游戏和应用程序提供前所未有的性能。',\r\n    specs: {\r\n      'GPU显存': '24GB GDDR6X',\r\n      '显存位宽': '384-bit',\r\n      '基础频率': '2230 MHz',\r\n      '加速频率': '2520 MHz',\r\n      'CUDA核心': '16384',\r\n      'RT核心': '128 (第3代)',\r\n      'Tensor核心': '512 (第4代)',\r\n      '功耗': '450W',\r\n      '建议电源': '850W',\r\n      '显示输出': '3x DisplayPort 1.4a, 1x HDMI 2.1'\r\n    },\r\n    features: [\r\n      '光线追踪技术',\r\n      'DLSS 3.0 帧生成',\r\n      '4K游戏性能',\r\n      '内容创作加速',\r\n      'AV1编解码',\r\n      '8K HDR游戏就绪'\r\n    ]\r\n  },\r\n  2: {\r\n    id: 2,\r\n    name: 'AMD Radeon RX 7900 XTX',\r\n    brand: 'AMD',\r\n    price: 999,\r\n    originalPrice: 1099,\r\n    rating: 4.6,\r\n    reviewCount: 567,\r\n    image: '',\r\n    inStock: true,\r\n    stockCount: 8,\r\n    description: 'AMD旗舰显卡，配备24GB显存和先进的RDNA 3架构，提供卓越的4K游戏性能。',\r\n    specs: {\r\n      'GPU显存': '24GB GDDR6',\r\n      '显存位宽': '384-bit',\r\n      '基础频率': '1855 MHz',\r\n      '加速频率': '2500 MHz',\r\n      '流处理器': '6144',\r\n      'RT加速器': '96',\r\n      '无限缓存': '96MB',\r\n      '功耗': '355W'\r\n    },\r\n    features: [\r\n      'RDNA 3架构',\r\n      'FSR 3.0技术',\r\n      '硬件光线追踪',\r\n      '无限缓存',\r\n      'AV1编解码',\r\n      'DisplayPort 2.1支持'\r\n    ]\r\n  },\r\n  3: {\r\n    id: 3,\r\n    name: 'NVIDIA GeForce RTX 4070 Ti',\r\n    brand: 'NVIDIA',\r\n    price: 799,\r\n    originalPrice: 899,\r\n    rating: 4.7,\r\n    reviewCount: 892,\r\n    image: '',\r\n    inStock: true,\r\n    stockCount: 12,\r\n    description: '高性能显卡，完美适配1440p游戏，支持光线追踪和DLSS 3.0技术。',\r\n    specs: {\r\n      'GPU显存': '12GB GDDR6X',\r\n      '显存位宽': '192-bit',\r\n      '基础频率': '2310 MHz',\r\n      '加速频率': '2610 MHz',\r\n      'CUDA核心': '7680',\r\n      'RT核心': '60 (第3代)',\r\n      'Tensor核心': '240 (第4代)',\r\n      '功耗': '285W'\r\n    },\r\n    features: [\r\n      '光线追踪技术',\r\n      'DLSS 3.0支持',\r\n      '出色的1440p性能',\r\n      'AV1编解码',\r\n      'NVIDIA广播',\r\n      'NVIDIA反射'\r\n    ]\r\n  },\r\n  7: {\r\n    id: 7,\r\n    name: 'ASUS ROG STRIX Z790-E',\r\n    brand: 'ASUS',\r\n    price: 459,\r\n    originalPrice: 499,\r\n    rating: 4.6,\r\n    reviewCount: 734,\r\n    image: '',\r\n    inStock: true,\r\n    stockCount: 8,\r\n    description: '高端Z790主板，专为英特尔第13代处理器设计，具备顶级功能和连接性。',\r\n    specs: {\r\n      '插槽': 'LGA 1700',\r\n      '芯片组': 'Intel Z790',\r\n      '内存支持': 'DDR5-5600+ (超频)',\r\n      '内存插槽': '4 x DIMM, 最大128GB',\r\n      '存储': '4x M.2插槽 (PCIe 4.0), 6x SATA III',\r\n      '网络': 'Intel 2.5Gb以太网',\r\n      '无线': 'WiFi 6E, 蓝牙5.3',\r\n      '板型': 'ATX'\r\n    },\r\n    features: [\r\n      'WiFi 6E连接',\r\n      'DDR5内存支持',\r\n      'PCIe 5.0就绪',\r\n      'AI超频',\r\n      'Aura Sync RGB',\r\n      '顶级音频解决方案'\r\n    ]\r\n  }\r\n}\r\n\r\n// 评价分布数据\r\nconst ratingDistribution = ref({\r\n  5: 856,\r\n  4: 234,\r\n  3: 98,\r\n  2: 45,\r\n  1: 23\r\n})\r\n\r\n// 用户评价数据\r\nconst reviews = ref([\r\n  {\r\n    id: 1,\r\n    author: '王先生',\r\n    rating: 5,\r\n    date: '2024-01-15',\r\n    comment: '性能绝对令人难以置信！这张卡在4K下轻松处理我扔给它的一切。光线追踪性能非常出色，DLSS 3.0像魔法一样工作。'\r\n  },\r\n  {\r\n    id: 2,\r\n    author: '李女士',\r\n    rating: 5,\r\n    date: '2024-01-10',\r\n    comment: '非常适合内容创作和游戏。24GB的显存对我的视频编辑工作来说太棒了，4K游戏也非常流畅。'\r\n  },\r\n  {\r\n    id: 3,\r\n    author: '张先生',\r\n    rating: 4,\r\n    date: '2024-01-05',\r\n    comment: '很棒的显卡，但运行时发热量很大。确保你有良好的机箱通风。不过性能绝对一流！'\r\n  }\r\n])\r\n\r\n// 方法\r\nconst loadProductDetail = () => {\r\n  product.value = productDatabase[productId]\r\n  \r\n  if (!product.value) {\r\n    console.error('未找到产品:', productId)\r\n  }\r\n  \r\n  // 检查收藏状态\r\n  const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')\r\n  isFavorite.value = favorites.includes(productId)\r\n}\r\n\r\nconst increaseQuantity = () => {\r\n  if (quantity.value < product.value?.stockCount) {\r\n    quantity.value++\r\n  }\r\n}\r\n\r\nconst decreaseQuantity = () => {\r\n  if (quantity.value > 1) {\r\n    quantity.value--\r\n  }\r\n}\r\n\r\nconst toggleFavorite = () => {\r\n  const favorites = JSON.parse(localStorage.getItem('favorites') || '[]')\r\n  if (isFavorite.value) {\r\n    const index = favorites.indexOf(productId)\r\n    if (index > -1) favorites.splice(index, 1)\r\n  } else {\r\n    favorites.push(productId)\r\n  }\r\n  localStorage.setItem('favorites', JSON.stringify(favorites))\r\n  isFavorite.value = !isFavorite.value\r\n}\r\n\r\nconst addToCart = () => {\r\n  if (!product.value || !product.value.inStock) return\r\n  \r\n  const cartItems = JSON.parse(localStorage.getItem('cartItems') || '[]')\r\n  const existingItem = cartItems.find(item => item.id === productId)\r\n  \r\n  if (existingItem) {\r\n    existingItem.quantity += quantity.value\r\n  } else {\r\n    cartItems.push({\r\n      ...product.value,\r\n      quantity: quantity.value\r\n    })\r\n  }\r\n  \r\n  localStorage.setItem('cartItems', JSON.stringify(cartItems))\r\n  showSuccessMessage.value = true\r\n}\r\n\r\nconst buyNow = () => {\r\n  addToCart()\r\n  navigateTo('/checkout')\r\n}\r\n\r\nconst goToCheckout = () => {\r\n  navigateTo('/checkout')\r\n}\r\n\r\nconst translateSpecKey = (key) => {\r\n  const translations = {\r\n    'GPU显存': '显存',\r\n    '显存位宽': '位宽',\r\n    '基础频率': '基础频率',\r\n    '加速频率': '加速频率',\r\n    'CUDA核心': 'CUDA核心',\r\n    'RT核心': 'RT核心',\r\n    'Tensor核心': 'Tensor核心',\r\n    '功耗': '功耗',\r\n    '建议电源': '建议电源',\r\n    '显示输出': '显示输出',\r\n    '插槽': '插槽',\r\n    '芯片组': '芯片组',\r\n    '内存支持': '内存支持',\r\n    '内存插槽': '内存插槽',\r\n    '存储': '存储',\r\n    '网络': '网络',\r\n    '无线': '无线',\r\n    '板型': '板型'\r\n  }\r\n  return translations[key] || key\r\n}\r\n\r\nconst formatDate = (dateString) => {\r\n  const date = new Date(dateString)\r\n  return date.toLocaleDateString('zh-CN', { \r\n    year: 'numeric', \r\n    month: 'long', \r\n    day: 'numeric' \r\n  })\r\n}\r\n\r\n// 页面加载时获取产品详情\r\nonMounted(() => {\r\n  loadProductDetail()\r\n})\r\n\r\n// 监听路由变化\r\nwatch(() => route.params.id, () => {\r\n  const newProductId = parseInt(route.params.id)\r\n  if (newProductId !== productId) {\r\n    loadProductDetail()\r\n  }\r\n})\r\n\r\n// 页面元数据\r\nuseHead({\r\n  title: computed(() => product.value ? `${product.value.name} - xlCig` : '产品详情 - xlCig'),\r\n  meta: [\r\n    { name: 'description', content: computed(() => product.value?.description || '查看产品详细信息和技术规格') }\r\n  ]\r\n})\r\n</script>\r\n\r\n<style scoped>\r\n/* 产品图片容器 */\r\n.product-image-container {\r\n  width: 100%;\r\n  height: 100%;\r\n  display: flex;\r\n  align-items: center;\r\n  justify-content: center;\r\n}\r\n\r\n/* 产品Placeholder样式 */\r\n.product-placeholder {\r\n  width: 100%;\r\n  height: 100%;\r\n  display: flex;\r\n  flex-direction: column;\r\n  align-items: center;\r\n  justify-content: center;\r\n  gap: 1.5rem;\r\n  background: linear-gradient(135deg, \r\n    rgba(0, 245, 255, 0.1) 0%, \r\n    rgba(0, 128, 255, 0.1) 50%, \r\n    rgba(168, 85, 247, 0.1) 100%);\r\n  padding: 2rem;\r\n  text-align: center;\r\n}\r\n\r\n.product-placeholder i {\r\n  font-size: 5rem;\r\n  color: #00f5ff;\r\n  text-shadow: 0 0 25px rgba(0, 245, 255, 0.8);\r\n  animation: hardwareIconPulse 3s ease-in-out infinite;\r\n}\r\n\r\n.product-placeholder-text {\r\n  font-size: 1.25rem;\r\n  font-weight: 700;\r\n  color: #ffffff;\r\n  text-shadow: 0 0 10px rgba(0, 245, 255, 0.5);\r\n  letter-spacing: 0.05em;\r\n  text-align: center;\r\n  line-height: 1.3;\r\n  max-width: 80%;\r\n}\r\n\r\n/* 硬件图标动画 */\r\n@keyframes hardwareIconPulse {\r\n  0%, 100% {\r\n    transform: scale(1);\r\n    filter: drop-shadow(0 0 20px rgba(0, 245, 255, 0.6));\r\n  }\r\n  50% {\r\n    transform: scale(1.05);\r\n    filter: drop-shadow(0 0 30px rgba(0, 245, 255, 1));\r\n  }\r\n}\r\n\r\n/* 响应式设计 */\r\n@media (max-width: 768px) {\r\n  .product-placeholder i {\r\n    font-size: 4rem;\r\n  }\r\n  \r\n  .product-placeholder-text {\r\n    font-size: 1rem;\r\n    max-width: 90%;\r\n  }\r\n}\r\n</style> "],"version":3}